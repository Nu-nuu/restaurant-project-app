<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_nine">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-55dp"
        android:src="@drawable/circles" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-55dp"
        android:src="@drawable/circles"
        android:rotation="180"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-55dp"
        android:src="@drawable/circles" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-55dp"
        android:src="@drawable/circles"
        android:rotation="180"/>

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/baseline_restaurant_24_create" />
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_arrow_back_24_black"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:paddingTop="30dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:background="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />
    <TextView
        android:id="@+id/passwordInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:text="Change Password"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <!-- Password -->
    <LinearLayout
        android:id="@+id/linearPass"
        android:layout_below="@+id/passwordInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password_label"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="********"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/change_password_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:visibility="visible"/>
    </LinearLayout>

    <!-- Re-Password -->
    <LinearLayout
        android:id="@+id/linearConfirm"
        android:layout_below="@+id/linearPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/confirm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password" />

        <EditText
            android:id="@+id/confirm_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearButton"
        android:layout_below="@+id/linearConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

    <Button
        android:id="@+id/save_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        android:background="@android:color/transparent"
        android:text="Save" />
    <Button
        android:id="@+id/cancel_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic"
        android:background="@android:color/transparent"
        android:text="Cancel" />
    </LinearLayout>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearButton"
        android:background="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />
    <TextView
        android:id="@+id/profileInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_2"
        android:text="Change Information"
        android:padding="16dp"

        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <!-- Phone -->
    <LinearLayout
        android:id="@+id/linearPhone"
        android:layout_below="@+id/profileInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Phone (+84):" />

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0123-456-789"
            android:inputType="phone" />

        <Button
            android:id="@+id/change_phone_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearPho"
        android:layout_below="@+id/linearPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/save_phone_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic|bold"
            android:background="@android:color/transparent"
            android:text="Save" />
        <Button
            android:id="@+id/cancel_phone_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:background="@android:color/transparent"
            android:text="Cancel" />
    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:id="@+id/linearEmail"
        android:layout_below="@+id/linearPho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/email_label"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Email:" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="johndoe123@abc.com"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/change_email_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearEma"
        android:layout_below="@+id/linearEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/save_email_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic|bold"
            android:background="@android:color/transparent"
            android:text="Save" />
        <Button
            android:id="@+id/cancel_email_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:background="@android:color/transparent"
            android:text="Cancel" />
    </LinearLayout>

    <!-- Full Name -->
    <LinearLayout
        android:id="@+id/linearName"
        android:layout_below="@+id/linearEma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fullname_label"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Full Name:" />

        <EditText
            android:id="@+id/fullname_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="John Doe"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/change_fullname_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearFull"
        android:layout_below="@+id/linearName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/save_fullname_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic|bold"
            android:background="@android:color/transparent"
            android:text="Save" />
        <Button
            android:id="@+id/cancel_fullname_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:background="@android:color/transparent"
            android:text="Cancel" />
    </LinearLayout>

    <!-- Address -->
    <LinearLayout
        android:id="@+id/linearAddress"
        android:layout_below="@+id/linearFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_label"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Address:" />

        <EditText
            android:id="@+id/address_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ABC City, R12, H192"
            android:inputType="textPostalAddress" />

        <Button
            android:id="@+id/change_address_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearAdd"
        android:layout_below="@+id/linearAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/save_address_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic|bold"
            android:background="@android:color/transparent"
            android:text="Save" />
        <Button
            android:id="@+id/cancel_address_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:background="@android:color/transparent"
            android:text="Cancel" />
    </LinearLayout>

    </RelativeLayout>

</ScrollView>

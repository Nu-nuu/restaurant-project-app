<?xml version="1.0" encoding="utf-8"?>
<!-- item_reservation_status.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Status: [Replace with status value]"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="52dp"
            android:layout_height="41dp"
            android:background="@drawable/baseline_delete_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/fullNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name: [Replace with full name value]"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: [Replace with email value]" />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: [Replace with phone value]" />

        <TextView
            android:id="@+id/guestNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guests Number: [Replace with guests number value]" />

        <TextView
            android:id="@+id/startDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date: [Replace with start date value]" />

        <TextView
            android:id="@+id/endDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date: [Replace with end date value]" />

        <TextView
            android:id="@+id/foodsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foods: [Replace with comma-separated food names]" />

        <TextView
            android:id="@+id/tableNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table Number: [Replace with table number value]" />

        <TextView
            android:id="@+id/capacityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacity: [Replace with capacity value]" />

        <TextView
            android:id="@+id/tableStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table Status: [Replace with table status value]" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_marginStart="4dp"/>

        <Button
            android:id="@+id/buttonFinished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finished"
            android:layout_weight="1"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

</LinearLayout>

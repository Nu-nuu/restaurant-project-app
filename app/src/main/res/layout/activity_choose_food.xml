<?xml version="1.0" encoding="utf-8"?>
<!-- activity_choose_food.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_nine">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-55dp"
        android:src="@drawable/circles" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="397dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="1dp"
            android:rotation="180"
            android:src="@drawable/circles" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-55dp"
        android:src="@drawable/circles" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-55dp"
        android:src="@drawable/circles"
        android:rotation="180"/>

    <ImageButton
        android:id="@+id/buttonCancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@drawable/baseline_cancel_24" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCancel"
        android:text="Choose Foods"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"     />

        <ListView
            android:id="@+id/food_list_view"
            android:layout_width="match_parent"
            android:layout_height="498dp"
            android:layout_below="@+id/titleTextView"
            android:background="@drawable/baseline_restaurant_24_create"
            android:choiceMode="multipleChoice"
            tools:listitem="@layout/item_food" />

    <Button
        android:id="@+id/confirmReservationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_list_view"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Confirm Reservation" />

    </RelativeLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/startDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BILL 18-06-2000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/startTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start time: 02:00"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/reservationInfoTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/fullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name: JonhDoe"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/guestNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guests: 10 People"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/endDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time: 04:00"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tableInfoTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tableNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Number: 1"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/capacityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity: 10 slots"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tableStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Reserved by JonhDoe Robin"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/foodInfoTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/foodsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name: Pizza, Coca"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Confirming"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/depositTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If status not Confirmed, please wait about a minute, or contact: 0123 456 789."
        android:textSize="16sp"
        android:textColor="#000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:background="#FF0000"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginRight="8dp"/>

    </LinearLayout>

</LinearLayout>

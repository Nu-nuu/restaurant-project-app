<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_nine"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-55dp"
        android:src="@drawable/circles" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-55dp"
        android:src="@drawable/circles"
        android:rotation="180"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-55dp"
        android:src="@drawable/circles" />
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/baseline_restaurant_24_create" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="Payment"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lblSoTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deposit Reservation"
        android:layout_below="@+id/txtTitle"
        android:padding="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        />
<LinearLayout
    android:id="@+id/linear1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lblSoTien"
    android:padding="16dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount:"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="100000"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@null"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/vnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="VND"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@null"
        android:layout_marginLeft="10dp"/>

</LinearLayout>


    <TextView
        android:id="@+id/lblPayWith"
        android:layout_width="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_height="wrap_content"
        android:text="Pay with"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="16dp"
       />


    <Button
        android:id="@+id/btnCreateOrder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblPayWith"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="#2196F3"
        android:gravity="center"
        android:text="ZaloPay"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCreateOrder"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnVisaCard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#2196F3"
            android:text="VISA Card"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnMomo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#2196F3"
            android:text="Momo"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnPay"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:text="Pay Now"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lblZpTransToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_zptranstoken"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/txtToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4CAF50"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:visibility="invisible"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/txtDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="invisible"/>

</RelativeLayout>
